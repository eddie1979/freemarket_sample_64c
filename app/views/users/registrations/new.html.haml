%h2 会員情報入力
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    %div{class: 'nickname_must'}
      = f.label :nickname,"ニックネーム"
      %p{class:'must'}
        必須
    %br/
    = f.text_field :nickname, autofocus: true, placeholder: "例)フリマ太郎"
  .field
    = f.label :email,"メールアドレス"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .field
    = f.label :password
    - if @minimum_password_length
      -# %em
      -#   (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再入力してください"
  %p 本人確認情報
  .field
    = f.label :名字（かな）
    %br/
    = f.text_field :first_name_kana,placeholder: "ふりま"
    %br/ 
    = f.label :名前（かな）
    %br/
    = f.text_field :last_name_kana,placeholder: "じろう"
  .field
    = f.label :名字
    %br/
    = f.text_field :first_name,placeholder: "浮利馬"
    %br/
    = f.label :名前
    %br/
    = f.text_field :last_name,placeholder: "二郎"
  .field
    = f.label :生年月日
    = f.date_select :birthday, use_month_numbers: true
    %br/
  -# .field
  -#   = f.label :名字
  -#   %br/
  -#   = f.text_field :phone_number
  -#   = f.label :名前
  .actions
    %div{class: 'signup'}
      = f.submit "サインアップ"
= render "users/shared/links"

