%h2 会員情報入力
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    %div{class: 'content_must'}
      = f.label :nickname,"ニックネーム"
      %p{class:'must'}
        必須
    %br/
    = f.text_field :nickname, autofocus: true, placeholder: "例)フリマ太郎"
  .field
    %div{class: 'content_must'}
      = f.label :email,"メールアドレス"
      %p{class:'must'}
        必須
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
  .field
    %div{class: 'content_must'}
      = f.label :password
      %p{class:'must'}
        必須
    -# - if @minimum_password_length
    -#   %em
    -#     (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上"
  .field
    %div{class: 'content_must'}
      = f.label :password_confirmation
      %p{class:'must'}
        必須
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再入力してください"
  %p 本人確認情報
  .field{class: 'form_name_kana'}
    %div{class: 'form_last_name_kana'}
      %div{class: 'content_must'}
        = f.label :名前かな（全角）
        %p{class:'must'}
          必須
      %br/
      %div{class: 'forms_kana'}
        = f.text_field :last_name_kana,placeholder: "姓:例)ふりま"
        %br/
        %div{class: 'form_first_name_kana'}  
          -# = f.label :名かな（全角）
          %br/
          = f.text_field :first_name_kana,placeholder: "名:例)じろう"
  .field{class: 'form_name'}
    %div{class: 'form_last_name'}
      %div{class: 'content_must'}
        = f.label :名前（全角）
        %p{class:'must'}
          必須
      %br/
      %div{class: 'forms_name'}
        = f.text_field :last_name,placeholder: "姓:例)浮利馬"
        %br/
        %div{class: 'form_first_name'}  
          -# = f.label :名（全角）
          %br/
          = f.text_field :first_name,placeholder: "名:例)二郎"
  .field
    = f.label :生年月日
    = f.date_select :birthday, use_month_numbers: true,
      start_year: 1920, end_year: (Time.now.year)
    %br/
  .actions
    %div{class: 'signup'}
      = f.submit "サインアップ", class: 'submit-btn'
= render "users/shared/links"

