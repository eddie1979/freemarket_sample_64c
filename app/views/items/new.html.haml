.registration-new
  = image_tag "logo.png"
.itemsMain
  .exhibitHeader
    .imageBox
      .title
        .title_box
          %label{for: ""} 出品画像
          %span.style-tag 必須
      %p.details-box 最大10枚までアップロードできます
      .image
        .image_box{"data-test" => "sell-upload-container"}
          .image_box-right{tabindex: "0"}
            .image_box-left
              %i.fa.fa-camera.likeIcon
              %p.text
                ドラッグアンドドロップ
                %br>
                またはクリックしてファイルをアップロード
    %hr.style_divider__1tLu3
    .imageBox
      .title
        .title_box
          %label{for:  ""} 商品名
          %span.style-tag 必須
        .formSpace
          .form
            %input.form{autocomplete: "off", name: "name", placeholder: "40文字まで", type: "text", value: ""}
      .title
        .title_box
          %label{for: ""} 商品の説明
          %span.style-tag 必須
        .formSpace
          %textarea.form{name: "description", placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。\n          ", rows: "7"}
    %hr.style_divider__1tLu3 
    .imageBox
      %p.subtitle 商品の詳細
      .space
      .title
        .title_box
          %label{for: ""} カテゴリー
          %span.style-tag 必須
        .formSpace
          .form
            %select.selectBox{name: "categoryId"}
              %option{"aria-selected" => "true", selected: "selected", value: ""} 選択してください
              %option{"aria-selected" => "false", value: "1"} レディース
              %option{"aria-selected" => "false", value: "2"} メンズ
              %option{"aria-selected" => "false", value: "3"} ベビー・キッズ
              %option{"aria-selected" => "false", value: "4"} インテリア・住まい・小物
              %option{"aria-selected" => "false", value: "5"} 本・音楽・ゲーム
              %option{"aria-selected" => "false", value: "1328"} おもちゃ・ホビー・グッズ
              %option{"aria-selected" => "false", value: "6"} コスメ・香水・美容
              %option{"aria-selected" => "false", value: "7"} 家電・スマホ・カメラ
              %option{"aria-selected" => "false", value: "8"} スポーツ・レジャー
              %option{"aria-selected" => "false", value: "9"} ハンドメイド
              %option{"aria-selected" => "false", value: "1027"} チケット
              %option{"aria-selected" => "false", value: "1318"} 自動車・オートバイ
              %option{"aria-selected" => "false", value: "10"} その他
      .space
      .brand-content
        .title
          %label{for: ""} ブランド
          %span.style-tagG 任意
        .formSpace
          .form
            %input{autocomplete: "off", name: "name", placeholder: "例)シャネル", type: "text", value: ""}
      .space
      .status-content
        .title
          %label{for: ""} 商品の状態
          %span.style-tag 必須
        .formSpace
          .form
            %select.selectBox{name: "itemCondition"}
              %option{"aria-selected" => "true", selected: "selected", value: ""} 選択してください
              %option{"aria-selected" => "false", value: "1"} 新品、未使用
              %option{"aria-selected" => "false", value: "2"} 未使用に近い
              %option{"aria-selected" => "false", value: "3"} 目立った傷や汚れなし
              %option{"aria-selected" => "false", value: "4"} やや傷や汚れあり
              %option{"aria-selected" => "false", value: "5"} 傷や汚れあり
              %option{"aria-selected" => "false", value: "6"} 全体的に状態が悪い
      %hr.style_divider__1tLu3
      .deliveryBox
        %p.subtitle 配送について
      .space
      .status-content
        .title
          %label{for: ""} 配送料の負担
          %span.style-tag 必須
        .formSpace
          .form
            %select.selectBox{name: "shippingPayer"}
              %option{"aria-selected" => "true", selected: "selected", value: ""} 選択してください
              %option{"aria-selected" => "false", value: "2"} 送料込み(出品者負担)
              %option{"aria-selected" => "false", value: "1"} 着払い(購入者負担)
      .space
      .status-content
        .title
          %label{for: ""} 発送元の地域
          %span.style-tag 必須
        .formSpace
          .form
            %select.selectBox{name: "praceholder"}
