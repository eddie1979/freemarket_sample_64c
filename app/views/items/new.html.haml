.wrapper
= render 'users/registrations/header'
.itemsMain
  .sellHeader
    .sellBox
      .title
        .title_box
          %label 出品画像
          %span.style-tag 必須
      %p.details-box 最大10枚までアップロードできます
      .image
        .image_box
          .image_box-right
            .image_box-left
              = form_for @picture do |f|
                = f.fields_for :images
              %i.fa.fa-camera.likeIcon
              %p.text
                ドラッグアンドドロップ
                %br>
                またはクリックしてファイルをアップロード
    %hr.style_divider
    .sellBox
      .title
        .title_box
          %label 商品名
          %span.style-tag 必須
        .form
          .form_space
            = form_for @items do |f|
             = f.text_field :name, class: 'form_space', placeholder: '40文字以内'
      .title
        .title_box
          %label 商品の説明
          %span.style-tag 必須
        .form
          = form_for @items do |f|
            = f.text_area :name, class: 'form_space', placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。\n "
    %hr.style_divider
    .sellBox
      %p.subtitle 商品の詳細
      .title
        .title_box
          %label カテゴリー
          %span.style-tag 必須
        .form
          .form_space
            = form_for @items do |f|
              = f.select :category_id,[["選択してください"],["レディース",1],["メンズ"2],["ベビー・キッズ"3],["インテリア・住まい・小物"4],["本・音楽・ゲーム"5],["おもちゃ・ホビー・グッズ"6],["香水・コスメ・美容"7],["家電・スマホ・カメラ"8],["スポーツ・レジャー"9]]
      .title
        .title_box
          %label ブランド
          %span.style-tag_sub 任意
        .form
          .form_space
            = form_for @items do |f|
             = f.text_field :name, class: 'form_space', placeholder: '例)シャネル'
      .title
        .title_box
          %label 商品の状態
          %span.style-tag 必須
        .form
          .form_space
            %select.selectBox{name: "itemCondition"}
              %option{ selected: "selected", value: ""} 選択してください
              %option{ value: "1"} 新品、未使用
              %option{ value: "2"} 未使用に近い
              %option{ value: "3"} 目立った傷や汚れなし
              %option{ value: "4"} やや傷や汚れあり
              %option{ value: "5"} 傷や汚れあり
              %option{ value: "6"} 全体的に状態が悪い
    %hr.style_divider
    .sellBox
      %p.subtitle 配送について
      .title
        .title_box
          %label 配送料の負担
          %span.style-tag 必須
        .form
          .form_space
            = form_for @items do |f|
              = f.select :delivery_charge,[["選択してください"],["着払い(購入者負担)"1],["送料込み(出品者負担)"2]]
      .title
        .title_box
          %label 発送元の地域
          %span.style-tag 必須
        .form
          .form_space
            %select.selectBox{name: "praceholder"}
              %option{ label: "選択してください", selected: "selected", value: ""} 選択してください
              %option{ value: "1"} 北海道
              %option{ value: "2"} 青森県
              %option{ value: "3"} 岩手県
              %option{ value: "4"} 宮城県
              %option{ value: "5"} 秋田県
              %option{ value: "6"} 山形県
              %option{ value: "7"} 福島県
              %option{ value: "8"} 茨城県
              %option{ value: "9"} 栃木県
              %option{ value: "10"} 群馬県
              %option{ value: "11"} 埼玉県
              %option{ value: "12"} 千葉県
              %option{ value: "13"} 東京都
              %option{ value: "14"} 神奈川県
              %option{ value: "15"} 新潟県
              %option{ value: "16"} 富山県
              %option{ value: "17"} 石川県
              %option{ value: "18"} 福井県
              %option{ value: "19"} 山梨県
              %option{ value: "20"} 長野県
              %option{ value: "21"} 岐阜県
              %option{ value: "22"} 静岡県
              %option{ value: "23"} 愛知県
              %option{ value: "24"} 三重県
              %option{ value: "25"} 滋賀県
              %option{ value: "26"} 京都府
              %option{ value: "27"} 大阪府
              %option{ value: "28"} 兵庫県
              %option{ value: "29"} 奈良県
              %option{ value: "30"} 和歌山県
              %option{ value: "31"} 鳥取県
              %option{ value: "32"} 島根県
              %option{ value: "33"} 岡山県
              %option{ value: "34"} 広島県
              %option{ value: "35"} 山口県
              %option{ value: "36"} 徳島県
              %option{ value:"37"} 香川県
              %option{ value: "38"} 愛媛県
              %option{ value: "39"} 高知県
              %option{ value: "40"} 福岡県
              %option{ value: "41"} 佐賀県
              %option{ value: "42"} 長崎県
              %option{ value: "43"} 熊本県
              %option{ value: "44"} 大分県
              %option{ value: "45"} 宮崎県
              %option{ value: "46"} 鹿児島県
              %option{ value: "47"} 沖縄県
      .title
        .title_box
          %label 発送までの日数
          %span.style-tag 必須
        .form
          .form_space
            = form_for @items do |f|
              = f.select :area,[["選択してください"],["1~2日で発送"1],["2~3日で発送"2],["4~7日で発送"3]]
    %hr.style_divider
  .footerBox
    .sellBox
      %p.subtitle 価格 (¥300〜9,999,999)
      .footerBox_content
        .footerBox_title
          .price
            .price_content
              %label 販売価格
              %span.style-tag 必須
        .priceBox
          %span.mark 
          .priceBox_form
            %input{autocomplete: "off", name: "price", placeholder: "0", type: "number", value: ""}
      .title
        .saleTitle 販売手数料(10%)
    %hr.style_divider
      .title
        .saleTitle 販売利益
      .button_box
        .button_content
          %button.style_button{tabindex: "0", type: "submit"} 出品する
          %button.save_button{tabindex: "0", type: "button"} 下書きに保存
          = link_to 'もどる', class: "backbutton"
= render 'footer'
