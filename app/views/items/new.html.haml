              %option{ value: "47"} 沖縄県
      .space
      .status-content
        .title
          %label{for: ""} 発送までの日数
          %span.style-tag 必須
        .formSpace
          .form
            %select.selectBox{name: "praceholder"}
              %option{"aria-selected" => "true", selected: "selected", value: ""} 選択してください
              %option{value: "1"} 1~2日で発送
              %option{value: "2"} 2~3日で発送
              %option{value: "3"} 4~7日で発送
      %hr.style_divider__1tLu3
      .priceBox
        %p.subtitle 価格 (¥300〜9,999,999)
      .status-content
      .space
        .title
          %label{for: ""} 販売価格
          %span.style-tag 必須
